.tips {
  position: relative;
}

.tips .mask {
  opacity: 0;
  -webkit-transition-duration: 0.3s;
  transition-duration: 0.3s;
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  visibility: hidden;
}

.tips .mask.visible {
  opacity: 1;
  visibility: visible;
}

.windows {
  opacity: 0;
  -webkit-transition-duration: 0.3s;
  transition-duration: 0.3s;
  position: fixed;
  z-index: 1000;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  visibility: hidden;
  background: #fff;
  width: 680rpx;
  border-radius: 10rpx;
}

.windows.visible {
  opacity: 1;
  visibility: visible;
}

.windows .tit {
  position: relative;
  width: 100%;
  height: 95rpx;
  border-bottom: 1rpx solid #e6e6e6;
  color: #333;
  font-size: 40rpx;
  line-height: 95rpx;
  text-align: center;
}

.windows .tit image {
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.box {
  text-align: center;
  width: 90%;
  padding-top: 60rpx;
  margin: 0 auto;
  padding-bottom: 20rpx;
  font-size: 32rpx;
}

.btn {
  width: 390rpx;
  height: 90rpx;
  color: #fff;
  font-size: 34rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 10rpx;
  background: #fc4d4d;
  margin: 0 auto;
  margin-top: 40rpx;
}
