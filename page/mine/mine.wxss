page {
  background: #f8f8f8;
}

.mine-header {
  position: relative;
  /* flex-direction: row; */
  padding: 30rpx 40rpx;
  background: #fd2e2e;
  color: #fff;
  text-align: center;
  padding-bottom: 70rpx;
}

.mine-header .avatar {
  width: 142rpx;
  height: 142rpx;
  border-radius: 50%;
}

.mine-info {
  width: 100%;
  margin-top: 20rpx;
}

.mine-info .nick-name {
  width: 100%;
  margin-top: 10rpx;
  line-height: 42rpx;
  font-size: 32rpx;
}

.mine-info .tel_number {
  margin-top: 15rpx;
}

.mine-info .tel_number .tel-icon {
  display: inline-block;
  width: 18rpx;
  height: 26rpx;
}

.mine-info .tel_number .tel {
  display: inline-block;
  margin-left: 4rpx;
  vertical-align: top;
  line-height: 28rpx;
  font-size: 28rpx;
}

.mine-info .wx-login {
  margin-top: 20rpx;
  line-height: 46rpx;
  font-size: 36rpx;
}

.mine-detail {
  position: absolute;
  top: 60rpx;
  right: 60rpx;
}

.mine-detail .detail-icon {
  width: 36rpx;
  height: 36rpx;
}

.mine-list {
  background: #fff;
  margin-top: -40rpx;
  position: relative;
  z-index: 11;
}

.list-box {
  display: flex;
  flex-direction: row;
}

.mine-list .mine-item {
  display: flex;
  flex-direction: row;
  margin: 0 36rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ececec;
  justify-content: space-between;
  align-items: center;
}

.mine-list .mine-item >image {
  width: 30rpx;
  height: 30rpx;
}

.mine-list .mine-item:last-child {
  border-bottom: 0;
}

.mine-list .mine-item .item-icon {
  width: 60rpx;
  height: 60rpx;
}

.mine-list .mine-item .item-icon image {
  width: 60rpx;
  height: 60rpx;
}

.mine-list .mine-item .text {
  margin-left: 20rpx;
  line-height: 60rpx;
  font-size: 36rpx;
}

.callme {
  position: absolute;
  left: 0%;
  bottom: 70rpx;
  width: 100%;
  text-align: center;
}

.callme image {
  text-align: center;
}

.bllang {
  margin-top: -60rpx;
  position: relative;
  z-index: 10;
}

.bllang image {
  width: 100%;
  height: 110rpx;
}
