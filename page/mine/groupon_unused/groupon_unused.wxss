
page{
  background: #f8f8f8;
}

.coupon .head{
  padding: 30rpx 40rpx;
  font-size: 36rpx;
  background: #fff;
  border-bottom: 1rpx solid #e8e8e8;
}

.coupon-info{
  margin-bottom: 30rpx;
}

.coupon .content{
  padding-bottom: 30rpx;
  background: #fff;
}

.coupon .content .icon{
  width: 50rpx;
  height: 50rpx;
  margin-top: -4rpx;
  margin-right: 4rpx;
}

.coupon .content .order-li.coupon-code{
  color: #333;
}


.coupon .content .order-li{
  display: flex;
  flex-direction: row;
  padding: 30rpx 30rpx 0;
  font-size: 32rpx;
  color: #666;
}

.coupon .content .order-li .left,.coupon .content .order-li .right{
  display: inline-block;
  width: 50%;
  line-height: 44rpx;
}