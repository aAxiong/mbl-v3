.slider {
  width: 100%;
  margin: 0 auto;
  margin-top: 10rpx;
}

.slider .slider-content {
  height: 690rpx;
  border-radius: 16rpx;
  text-align: center;
}

.slider .slider-img {
  width: 600rpx;
  height: 605rpx;
  margin: 0 auto;
  border-radius: 16rpx;
  margin-top: 60rpx;
}

.slider .slider-img.active {
  opacity: 1;
  z-index: 10;
  height: 690rpx;
  transition: all 0.2s ease-in 0s;
  margin-top: 10rpx;
}

.slider .wx-swiper-dot {
  width: 20rpx;
  display: inline-flex;
  height: 20rpx;
  margin-left: 10rpx;
  justify-content: space-between;
}

.slider .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: rgba(204, 204, 204, 0.8);
  border-radius: 8rpx;
}

.slider .wx-swiper-dot-active::before {
  background: rgba(244, 0, 0, 0.8);
}

.titbox {
  width: 100%;
  height: 90rpx;
  border-bottom: 1rpx solid #e6e6e6;
  margin-top: 50rpx;
  display: flex;
  justify-content: flex-start;
}

.titbox .tit {
  margin-left: 40rpx;
  font-size: 40rpx;
  color: #333;
  width: 260rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 90rpx;
}

.titbox .num {
  width: 250rpx;
  height: 90rpx;
  font-size: 26rpx;
  color: #808080;
  line-height: 65rpx;
}

.titbox .int {
  width: 150rpx;
  height: 90rpx;
  line-height: 65rpx;
  margin-right: 50rpx;
  font-size: 26rpx;
  color: #808080;
}

.infobox {
  width: 670rpx;
  min-height: 230rpx;
  padding: 30rpx 0 40rpx 0;
  margin: 0 auto;
}

.infobox .tit {
  font-size: 30rpx;
}

.infobox .content {
  font-size: 26rpx;
  margin-top: 10rpx;
}

.btn {
  width: 705rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 40rpx;
  color: #fff;
  border-radius: 7rpx;
  background: #fc4e4e;
  margin: 0 auto;
  margin-bottom: 20rpx;
}
