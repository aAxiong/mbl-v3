              <view class="tit">积分增加</view>
              <view class="time">2018年5月2日</view>
            </view>
            <view class="int">-￥50</view>
          </view>
        </view>
      </view>
      <view class="inf_wrapper" wx:if='{{infoNavActive==1}}'>
        <view class="consumption">
          <view class="li">
            <image src='/images/mine/backg-wodejifen@2x.png'></image>
            <view class="info">
              <view class="tit">积分增加1</view>
