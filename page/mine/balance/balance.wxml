          <input type='text' placeholder='最低充值25元起' placeholder-class='inputp' bindinput="getMoney"></input>
          <view class="re_btn">充值</view>
        </view>
        <view class="remark">*充满100赠送10元</view>
      </view>
    </view>
    <view class="re_body">
      <view class="tit">固定金额充值</view>
      <view class="ul">
        <view class="li">
          <view class="money">50元</view>
        </view>
        <view class="li">
          <view class="money">50元</view>
          <view class="remark">赠送10元</view>
        </view>
        <view class="li">
          <view class="money">50元</view>
