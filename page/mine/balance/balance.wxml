<view class="nav">
  <view class="li {{navActive==0?'active':''}}" data-index='0' bindtap='changNav'>余额充值
    <view class="tiao"></view>
  </view>
  <view class="li {{navActive==1?'active':''}}" data-index='1' bindtap='changNav'>余额明细
