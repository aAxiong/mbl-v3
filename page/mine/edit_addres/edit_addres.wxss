page {
  background: #f8f8f8;
}

.btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fd2e2e;
  color: #fff;
  text-align: center;
}

.page {
  background: #fff;
  margin-top: 20rpx;
}

.people {
  display: flex;
  border-bottom: 1px solid #f8f8f8;
  padding: 25rpx 0 30rpx 20rpx;
}

.people .mk {
  margin-left: 45rpx;
}

.people .mk input {
  color: #666;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.people .name {
  font-size: 34rpx;
  color: #333;
  line-height: 55rpx;
  width: 140rpx;
}

.people  .selectbox {
  display: flex;
}

.people  .selectbox >view {
  width: 110rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #e5e5e5;
  margin-right: 50rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  border-radius: 8rpx;
}

.people  .selectbox >view.active {
  background: #fd8f2e;
}

.phone {
  display: flex;
  padding-left: 20rpx;
  border-bottom: 1px solid #f8f8f8;
  padding: 20rpx;
  justify-content: space-between;
  align-items: center;
}

.phone .name {
  font-size: 34rpx;
  color: #333;
}

.phone .mk input {
  color: #666;
  font-size: 30rpx;
  width: 270rpx;
  text-align: right;
}

.phone .mk .address {
  font-size: 30rpx;
  color: #666;
  width: 540rpx;
}

.phone .mk .address >view {
  text-align: right;
}

.phone .mk .address image {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
}

.addinfo {
  display: flex;
  padding-left: 20rpx;
  padding: 20rpx;
  justify-content: space-between;
}

.addinfo .mk {
  padding-top: 5rpx;
}

.addinfo textarea {
  width: 520rpx;
  height: 135rpx;
  font-size: 30rpx;
  color: #666;
}

.addinfo .name {
  font-size: 34rpx;
  color: #333;
}

.add:active {
  background: #f8f8f8;
}

.opt {
  margin-top: 25rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  width: 250rpx;
}

.opt .f {
  background: #e7e7e7;
  width: 34rpx;
  height: 34rpx;
}

.opt .f image {
  width: 34rpx;
  height: 34rpx;
}

.opt text {
  color: #999;
  font-size: 28rpx;
  margin-left: 15rpx;
}
