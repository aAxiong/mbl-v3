.groupon-hader {
  background: #fff;
  margin-top: 20rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.menu {
  display: flex;
  white-space: nowrap;
}

.menu .menu-item {
  display: inline-block;
  padding: 30rpx 40rpx;
}

.menu .menu-item.active {
  color: #fd2e2e;
  border-bottom: 2rpx solid #fd2e2e;
}

