page {
  background: #f5f5f5;
}

.slider .slider-content {
  height: 360rpx;
}

.slider .slider-img {
  width: 100%;
  height: 360rpx;
}

.header {
  position: relative;
  margin: 0 20rpx 25rpx;
}

.header .header-bg image {
  width: 750rpx;
  height: 750rpx;
}

.header .mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 315rpx;
  background: rgba(0, 0, 0, 0.4);
  z-index: 10;
}

.header-content {
  display: flex;
  flex-direction: row;
  padding: 30rpx 0;
  border-radius: 10rpx;
  background: #fff;
  box-shadow: 0 2rpx 18rpx 3rpx rgba(9, 9, 9, 0.1);
}

.header-content .logo {
  margin-top: 30rpx;
  margin-left: 60rpx;
  margin-right: 50rpx;
}

.header-content .logo image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.header-content .store-info {
  color: #333;
}

.header-content .store-info .name {
  height: 24px;
  margin-top: 10rpx;
  margin-bottom: 24rpx;
  margin-left: 20rpx;
  font-size: 18px;
  color: #333;
  font-weight: bold;
  overflow: hidden;
}

.header-content .contact .con-icon {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx;
  vertical-align: middle;
  font-size: 0;
}

.header-content .contact .con-icon image {
  width: 40rpx;
  height: 40rpx;
}

.header-content .contact .text {
  display: inline-block;
  vertical-align: middle;
  line-height: 48rpx;
  font-size: 28rpx;
  font-weight: 400;
}

.header-content .contact .info {
  margin-bottom: 10rpx;
}

.header-content .contact .address {
  display: flex;
}

.header-content .contact .address .text {
  height: 48rpx;
  width: 340rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header-content .contact .tel .text {
  text-decoration: underline;
}

.menu {
  display: flex;
  flex-direction: row;
  justify-content: left;
  position: relative;
  padding: 25rpx 0 0 0;
  margin: -16rpx 20rpx 25rpx 20rpx;
  box-shadow: 0 2rpx 18rpx 3rpx rgba(9, 9, 9, 0.1);
  background: #fff;
  border-radius: 10rpx;
  z-index: 99;
  flex-wrap: wrap;
}

.menu .menu-item {
  text-align: center;
  width: 25%;
  margin-bottom: 10rpx;
}

.menu .menu-item .icon image {
  width: 100rpx;
  height: 100rpx;
}

.menu .menu-item .text {
  line-height: 26px;
  font-size: 14px;
  color: #333;
}

.shop-content {
  margin-bottom: 30rpx;
  background: #fff;
}

.shop-wrapper {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 20rpx 10rpx 0;
  background: #f8f8f8;
}

.shop {
  position: relative;
  width: 48%;
  margin: 0 1% 20rpx;
  padding-bottom: 20rpx;
  background: #fff;
}

.shop .shop-share {
  position: absolute;
  bottom: 16rpx;
  right: 30rpx;
  width: 46rpx;
  height: 46rpx;
}

.shop-share .share-wrapper {
  position: relative;
}

.shop-share .share-icon {
  width: 46rpx;
  height: 46rpx;
}

.shop .shop-share .share-btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 46rpx;
  height: 46rpx;
  opacity: 0;
}

.shop-content .title {
  padding-top: 20rpx;
  padding-bottom: 25rpx;
  line-height: 24px;
  font-size: 36rpx;
  text-align: center;
}

.shop-content .title image {
  width: 34rpx;
  height: 34rpx;
  margin-top: -4rpx;
  margin-left: -4px;
  vertical-align: middle;
}

.shop-content .shop .shop-image image {
  width: 100%;
  height: 385rpx;
}

.shop-content .shop .shop-intro {
  margin: 20rpx 24rpx 10rpx;
}

.shop-content .shop .shop-intro .name {
  display: inline-block;
  max-height: 84rpx;
  height: 84rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: #333;
  overflow: hidden;
}

.shop-content .shop .price {
  display: inline-block;
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #fd2e2e;
  font-weight: bold;
}

.shop-content .shop .price .sign {
  font-size: 24rpx;
}

.video-positon {
  position: fixed;
  top: 860rpx;
  right: 0;
}

.video-positon .video-btn {
  padding: 10rpx 30rpx 10rpx 20rpx;
  background: rgba(253, 46, 46, 0.8);
  border-top-left-radius: 60rpx;
  border-bottom-left-radius: 60rpx;
}

.video-positon .icon {
  position: relative;
  width: 52rpx;
  height: 52rpx;
}

.video-positon .text {
  display: inline-block;
  margin-left: 10rpx;
  line-height: 52rpx;
  font-size: 32rpx;
  color: #fff;
}

.video-playing, .desk-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 100;
}

.video-playing .video-wrapper {
  position: fixed;
  top: 53%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 92%;
}

.video-playing .xx {
  position: fixed;
  top: 25%;
  left: 90%;
  transform: translate(-20%, -50%);
}

.video-playing .xx image {
  width: 57rpx;
  height: 57rpx;
}

.video-playing .video {
  width: 100%;
  height: 250px;
}

.desk-mask {
  display: flex;
  justify-content: center;
  align-items: center;
}

.desk-mask .text {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}
