page {
  background: #f5f5f5;
}

.payment-wrapper .header {
  position: relative;
  width: 100%;
  height: 350rpx;
  text-align: center;
  overflow: hidden;
}

.payment-wrapper .header .pay-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 350rpx;
  z-index: -1;
}

.payment-wrapper .header .text {
  font-size: 36rpx;
  color: #fff;
  margin-top: 260rpx;
}

.payment-wrapper .content {
  margin-top: 30rpx;
  padding: 30rpx 30rpx 40rpx;
  background: #fff;
}

.payment-wrapper .content .title {
  margin-bottom: 20rpx;
  line-height: 50rpx;
  font-size: 36rpx;
  color: #333;
}

.payment-wrapper .goods-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  margin-bottom: 20rpx;
}

.payment-wrapper .goods-item .text {
  width: 20%;
  max-height: 88rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: #666;
  overflow: hidden;
}

.payment-wrapper .goods-item .name {
  width: 45%;
}

.payment-wrapper .text-total {
  font-size: 32rpx;
  color: #000;
  width: 20%;
}

.payment-wrapper .total .tot {
  width: 45%;
}

.nav-bottom {
  margin-top: 60rpx;
  text-align: center;
}

.nav-bottom .btn-payment {
  display: inline-block;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #fff;
  background: #fd2e2e;
  border-radius: 10rpx;
}
