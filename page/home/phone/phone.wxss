page{
  background: #f8f8f8;
}
.phone-wrapper .phone-bg{
  margin-top: 20rpx;
  background: #fff;
}

.phone-wrapper .btn-wrappper{
  margin-top: 100rpx;
  text-align: center;
}

.phone-wrapper .btn-wrappper .btn-submit{
  width: 200rpx;
  text-align: center;
  background: #ff861a;
  color: #fff;
}

.phone-wrapper .phone-item{
  display: flex;
  flex-direction: row;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f3f3f3;
}

.phone-wrapper .phone-item .phone-label{
  flex: 0 0 130rpx;
  width: 130rpx;
  line-height: 70rpx;
  font-size: 36rpx;
  text-align: left;
}

.phone-wrapper .phone-item .phone-ipt{
  flex: 1;
}

.phone-wrapper .phone-item .phone-ipt .ipt-control{
  line-height: 70rpx;
  height:70rpx;
}

.phone-wrapper .phone-item .phone-code{
  flex: 0 0 140rpx;
  width: 140rpx;
  padding-left: 20rpx;
  border-left: 1rpx solid #ccc;
}

.phone-wrapper .phone-item  .code-text{
  display: inline-block;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #fd2e2e;
}