page {
  background: #f8f8f8;
}

.box {
  padding-bottom: 120rpx;
}

.validListBox {
  margin-top: 20rpx;
}

.validListBox .li {
  background: #fff;
  border-bottom: 1rpx solid #e8e8e8;
  display: flex;
  align-items: center;
  padding-bottom: 50rpx;
  padding-top: 35rpx;
  position: relative;
}

.validListBox .li.active {
  padding-bottom: 20rpx;
}

.validListBox .li:last-child {
  border: none;
}

.validListBox .li .selctBox {
  position: absolute;
  top: 50rpx;
  left: 20rpx;
}

.validListBox .li .selctBox image {
  width: 38rpx;
  height: 38rpx;
}

.validListBox .li .infoBox {
  margin-left: 83rpx;
  width: 668rpx;
}

.validListBox .li .infoBox .tit {
  font-size: 30rpx;
  color: #333;
  width: 595rpx;
  margin-bottom: 20rpx;
}

.validListBox .li .infoBox .tool {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.validListBox .li  .infoBox .tool .info {
  display: flex;
}

.validListBox .li  .infoBox .tool .info .text {
  font-size: 26rpx;
  color: #666;
  margin-right: 50rpx;
}

.validListBox .li  .infoBox .tool .info .text.name {
  width: 208rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.validListBox .li .infoBox .tool .toolBar image {
  margin-left: 15rpx;
  margin-right: 20rpx;
}

.validListBox .li .defaul {
  width: 85rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 100rpx;
  color: #fff;
  font-size: 26rpx;
  background: #fd2e2e;
  margin-top: 20rpx;
}

.invalidListBox .li .defaul {
  width: 85rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 100rpx;
  color: #fff;
  font-size: 26rpx;
  background: #999;
  margin-top: 20rpx;
  opacity: 0.5;
}

.invalidListBox {
  margin-top: 20rpx;
}

.invalidListBox  .li {
  background: #fff;
  border-bottom: 1rpx solid #e8e8e8;
  padding-bottom: 40rpx;
}

.invalidListBox .li .infoBox {
  margin-left: 83rpx;
  width: 668rpx;
}

.invalidListBox .li .infoBox .tit {
  font-size: 30rpx;
  color: #333;
  width: 595rpx;
  margin-bottom: 20rpx;
  padding-top: 30rpx;
  opacity: 0.5;
}

.invalidListBox .li  .infoBox .tool {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.invalidListBox .li  .infoBox .tool .info {
  display: flex;
}

.invalidListBox .li  .infoBox .tool .info .text {
  font-size: 26rpx;
  color: #666;
  margin-right: 50rpx;
  opacity: 0.5;
}

.invalidListBox .li  .infoBox .tool .info .text.name {
  width: 208rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.invalidListBox .li  .infoBox .tool .toolBar image {
  margin-left: 15rpx;
  margin-right: 20rpx;
}

.titbox {
  height: 90rpx;
  line-height: 90rpx;
  color: #999;
  font-size: 30rpx;
  font-weight: bold;
  border-bottom: 1px solid #e8e8e8;
  text-indent: 60rpx;
  background: #fff;
}

.btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fd2e2e;
  color: #fff;
  text-align: center;
}
