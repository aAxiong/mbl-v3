page {
  background: #f8f8f8;
}

.activity-image {
  width: 100%;
  height: auto;
}

.activity-image image {
  width: 100%;
  height: 55vw;
}

.activity-content {
  padding: 40rpx;
  background: #fff;
}

.activity-content .title {
  font-size: 36rpx;
  color: #000;
  font-weight: 400;
}

.activity-content .rule, activity-content .time {
  margin-bottom: 30rpx;
  font-size: 36rpx;
  color: #333;
}

.share {
  text-align: center;
}

.share-btn {
  display: inline-block;
  width: 280rpx;
  margin-top: 80rpx;
  padding: 24rpx 0;
  line-height: 38rpx;
  font-size: 38rpx;
  color: #fff;
  background: #ff861a;
  border-radius: 12rpx;
}
